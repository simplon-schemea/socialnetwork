<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="003" author="someone" runOnChange="true" runAlways="true">
        <createTable tableName="messages">
            <column name="id" type="uuid" defaultValueComputed="${uuid_gen}">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="author_id" type="uuid">
                <constraints foreignKeyName="author_fkey" referencedTableName="users" referencedColumnNames="id"  nullable="false"/>
            </column>
            <column name="timestamp" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="is_profile_message" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
